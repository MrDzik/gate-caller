<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GateCaller.MainPage"
             Appearing="MainPage_Reload"
             Loaded="MainPage_OnLoaded"
>
    <ContentPage.Resources>
        <ControlTemplate x:Key="GateViewControlTemplate">
            <Border 
                BindingContext="{Binding Source={RelativeSource TemplatedParent}}"
                WidthRequest="300"
                HeightRequest="150"
                StrokeThickness="1"
                BackgroundColor="Transparent"
                StrokeShape="RoundRectangle 40,40,40,40"
                x:Uid="{Binding GatePos}"
            >
                <VerticalStackLayout Padding="0,10">
                    <Label FontAttributes="Bold" FontSize="24" HorizontalTextAlignment="Center" Text="{Binding GateName}"/>
                    <Label Margin="0,0,0,10" FontSize="16" HorizontalTextAlignment="Center" Text="{Binding GateDistance}"/>
                    <Button WidthRequest="200" FontSize="18" Text="Otwórz" BackgroundColor="#512BD4" TextColor="White" Clicked="OpenButton_OnClicked" />
                </VerticalStackLayout>
            </Border>
        </ControlTemplate>
    </ContentPage.Resources>
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,30"
            VerticalOptions="Start">
            <Label x:Name="LoadingLabel" HorizontalTextAlignment="Center" Text="Trwa ładowanie danych..."/>
            <Label Margin="0,0,0,50" FontSize="32" HorizontalTextAlignment="Center" Text="TWOJE BRAMY"  />
            <VerticalStackLayout
                Spacing="25"
                VerticalOptions="Center"
                x:Name="StackLayout"
                />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
